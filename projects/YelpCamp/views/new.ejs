<% include partials/header %>
<div class="container"> <!-- Gives padding around the form so it's not stretched across the entire page -->
    <div class="row">
        <h1 style="text-align: center;">Create a New Campground</h1>
        <div style="width: 30%; margin: 30px auto;">  <!-- width makes the form smaller, margin centers everything -->
            <form action="/campgrounds" method = "POST"> <!-- action = "/campgrounds" because that is where the info will post -->
                <div class="form-group">
                   <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name= "description" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button> <!-- btn-block makes button take up entire line -->
                </div>
            </form>
            <a href="/campgrounds">Go back.</a>
        </div>
    </div>
</div>

<% include partials/footer %>